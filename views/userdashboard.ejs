</head>

<body>
  <nav>
    <div class="container nav__container">
      <a href="index.html">
        <h4>EduQuest</h4>
      </a>
      <ul class="nav__menu">
        <li><a href="index.html">Home</a></li>
        <li><a href="about.html">About</a></li>
        <li><a href="courses.html">Courses</a></li>
        <li><a href="contact.html">Contact</a></li>
      </ul>
      <button id="open-menu-btn"><i class="uil uil-bars"></i></button>
      <button id="close-menu-btn"><i class="uil uil-multiply"></i></button>
    </div>
  </nav><br> <br> <br> <br><br>

  <h3><center>User Dashboard</center></h3><br><br>
  <div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">
        <% if (users.length > 0) { %>
            <ul>
                <% users.forEach(function(user) { %>
                    <li>
                        <h2>User Information</h2>
                        <p>Name: <%= user.name %></p>
                        <p>Gmail ID <%= user.email %></p>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No user information found.</p>
        <% } %>
    </div>
</div>
<br><br><br>
<section class="courses">
    <div class="container courses__container">
        <% courses.forEach(function(course) { %>
            <article class="course">
                <div class="course__image">
                    <img src="<%= course.image %>" alt="<%= course.coursename %>">
                </div>
                <div class="course__info">
                    <h4><%= course.coursename %></h4><br>
                    <h4><bold>Instructor :</bold> <%= course.instructor%></h4>
                    <p><%= course.description %></p>
                    <p><bold>Duration:</bold> <%= course.duration %></p>
                    <p><bold>Reviews:</bold> <%= course.reviews %>/5</p>
                    <a href="<%= course.link %>" class="btn btn-primary">Add Course</a>
                </div>
            </article>
        <% }); %>
    </div>
</section>



